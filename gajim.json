{
    "version": "1.3.1",
    "description": "A fully-featured XMPP client",
    "homepage": "https://gajim.org/",
    "architecture": {
        "64bit": {
            "url": "https://gajim.org/downloads/1.3/Gajim-1.3.1-64bit-1.exe",
            "hash": "md5:000FAD1E8334AE94A3B605DFC8F5A1DE"
        },
        "32bit": {
            "url": "https://gajim.org/downloads/1.3/Gajim-1.3.1-32bit-1.exe",
            "hash": "md5:3E501810BF47BC0751794CE61CF5D1B0"
        }
    },
	"installer": {
    	"file": "gajim-installer.exe",
    	"args": [
	      		"/S",
	      		"/D=$dir"
    		]
  	},
  	"uninstaller": {
    		"file": "uninstall.exe",
    		"args": "/S"
  	},
	"env_set": {
		"GAJIM_HOME": "$dir\\bin",
		"GAJIM_EXE": "Gajim.exe",
		"GAJIM": "$dir\\bin\\Gajim.exe"
	},
	"bin": [
		[ "bin\\Gajim.exe", "Gajim" ]
	]
}
